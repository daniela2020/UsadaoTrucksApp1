<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ContatoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idcontato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            tools:text=" usadaotrucks@outlook.com
              fone: 55 3313 1871
              Rua:Jakob Vontobel 1121 Bairro Kurtz
              Santo Ã‚ngelo RS" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.makinfunapps.radiobutton.MainActivity"
        android:orientation="vertical"
        android:padding="15sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:focusable="false"
            android:layout_marginTop="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitulo_main"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:focusable="false"
            android:layout_marginTop="15sp"/>

        <RadioGroup
            android:id="@+id/rdg_opcoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15sp">

            <RadioButton
                android:id="@+id/rdb_opcao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rdb_opcao1" />

            <RadioButton
                android:id="@+id/rdb_opcao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rdb_opcao2" />

            <RadioButton
                android:id="@+id/rdb_opcao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rdb_opcao3" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_verificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_verificar"
            android:layout_marginTop="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rodape"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>